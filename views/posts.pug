extends layout.pug
block title 
    title All posts
block content
    header.text-center.text-white.masthead(style='border-color: var(--gray);background: var(--purple);')
        div.masthead-content
            div.container
                h2.masthead-subheading.mb-0(style='text-align: center;color: var(--white);') All posts
    section 
        div.container
            if deleted
                span.errorwithpost Post deleted
            each post in posts
                div.allposts.align-items-center
                    a.text-black-50.lead(href=`/posts/${post.id}`) #{post.title}
                    div
                        a.btn.btn-secondary(href=`/${post.id}/deletepost` style="margin: 5px; background: red") Delete
    section
        div.container
            div.row.align-items-center
                div.col
                    div.p-5
                        h2.display-4.text-center(style='font-size: 30px;') Read and delete your posts in the most convenient way&nbsp;