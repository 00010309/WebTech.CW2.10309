extends layout.pug
block title 
    title All posts
block content
    header
        div
            div
                h2 All posts
    
    section 
        div
            if deleted
                span.errorwithpost Post deleted
            each post in posts
                div
                    a(href=`/posts/${post.id}`) #{post.title}
                    div
                        a(href=`/${post.id}/deletepost` style="margin: 5px; background: red") Delete
    section
        div
            div
                div
                    div
                        h2 Read and delete your posts in the most convenient way&nbsp;