extends layout.pug
block title 
    title Create a blog
block content 
    header.text-center.text-white.masthead(style='border-color: var(--gray);background: var(--purple);')
        div.masthead-content
            div.container
                h2.masthead-subheading.mb-0(style='text-align: center;color: var(--white);') Create a post
    section
        div.container
            div.row.align-items-center
                div.col 
                    div.p-5(style='margin: 15px;')
                        if error
                            p.errorwithpost There are empty boxes. Try again
                        if success_post
                            p.successwithpost The post has been published
                        if success_draft
                            p.successwithpost The draft has been saved
                        form.float-right(method='post' style='width: 100%;text-align: center;')
                            label.float-left Author
                            div.form-group
                                input.form-control(type='text' name='Author' placeholder="author name")
                            label.float-left Title
                            div.form-group
                                input.form-control(type='text' name='Title' placeholder="title name")
                            label.float-left Post
                            div.form-group
                                textarea.form-control.flex-grow-1(rows='10' name='Post' placeholder="whole post")
                            div.form-group
                                button.btn.btn-primary(style='margin: 10px;' formaction="/createpost") Post
                                button.btn.btn-secondary(style='margin: 10px;' formaction="/createdraft") Save as a draft
    section
        div.container
            div.row.align-items-center
                div.col
                    div.p-5(style='margin: 15px;')
                        h2.display-4.text-center(style='font-size: 30px;') Create a post which you may also save as draft in the most convenient way.

